@model IEnumerable<Model.TaskEntity>

@{
    ViewBag.Title = "Index";
}

<h2>EXECUTED TASKS</h2>

<p>
    @Html.ActionLink("Refresh", "Index")
</p>
<p>
    <h4>Delete tasks from bbdd</h4>
    @Html.ActionLink("Delete All", "DeleteAll")
    @Html.ActionLink("Delete Hangfire", "DeleteHF")
       
</p>
<p>
    <h4>Queue new task (to be executed in worker role)</h4>
    @Html.ActionLink("New task","NewTask")
</p>
<p><h4>Task list</h4></p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TaskType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExecutionDT)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Details)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Worker)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TaskType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ExecutionDT)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Details)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Worker)
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |*@
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
